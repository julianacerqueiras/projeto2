<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfe6e9"
    tools:context=".Cadastro">

   <ImageView
       android:id="@+id/imageView3"
       android:layout_width="321dp"
       android:layout_height="153dp"
       app:layout_constraintBottom_toTopOf="@+id/textView5"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.488"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.125"
       app:srcCompat="@drawable/oie_transparent" />

   <TextView
       android:id="@+id/textView4"
       android:layout_width="253dp"
       android:layout_height="29dp"
       android:layout_marginBottom="44dp"
       android:text=" Bem-vindo ao DescobreAi!"
       android:textColor="@color/black"
       android:textSize="20dp"
       android:textStyle="bold"
       app:layout_constraintBottom_toTopOf="@+id/edtNomeNewUser"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

   <TextView
       android:id="@+id/textView5"
       android:layout_width="257dp"
       android:layout_height="37dp"
       android:layout_marginBottom="8dp"
       android:text="Para criar seu acesso informe os dados abaixo."
       android:textAlignment="center"
       android:textColor="@color/black"
       app:layout_constraintBottom_toTopOf="@+id/edtNomeNewUser"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView4"
       app:layout_constraintVertical_bias="1.0" />

   <EditText
       android:id="@+id/edtNomeNewUser"
       android:layout_width="320dp"
       android:layout_height="47dp"
       android:layout_marginStart="8dp"
       android:layout_marginTop="212dp"
       android:layout_marginEnd="8dp"
       android:layout_marginBottom="8dp"
       android:background="@drawable/edttext_rounded"
       android:ems="10"
       android:fontFamily="sans-serif-condensed-medium"
       android:hint="Nome"
       android:paddingLeft="15dp"
       app:layout_constraintBottom_toTopOf="@+id/edtEmailNewUser"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.493"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <EditText
       android:id="@+id/edtEmailNewUser"
       android:layout_width="320dp"
       android:layout_height="45dp"
       android:layout_marginStart="8dp"
       android:layout_marginTop="8dp"
       android:layout_marginEnd="8dp"
       android:layout_marginBottom="8dp"
       android:background="@drawable/edttext_rounded"
       android:ems="10"
       android:fontFamily="sans-serif-condensed-medium"
       android:hint="E-mail"
       android:inputType="textEmailAddress"
       android:paddingLeft="15dp"
       app:layout_constraintBottom_toTopOf="@+id/edtPasswordNewUser"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/edtNomeNewUser" />

   <EditText
       android:id="@+id/edtPasswordNewUser"
       android:layout_width="320dp"
       android:layout_height="45dp"
       android:layout_marginStart="8dp"
       android:layout_marginTop="8dp"
       android:layout_marginEnd="8dp"
       android:layout_marginBottom="16dp"
       android:background="@drawable/edttext_rounded"
       android:ems="10"
       android:fontFamily="sans-serif-condensed-medium"
       android:hint="Senha"
       android:inputType="textPassword"
       android:paddingLeft="15dp"
       app:layout_constraintBottom_toTopOf="@+id/btnCadastrar"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/edtEmailNewUser" />

   <Button
       android:id="@+id/btnCadastrar"
       android:layout_width="320dp"
       android:layout_height="wrap_content"
       android:layout_marginStart="8dp"
       android:layout_marginTop="8dp"
       android:layout_marginEnd="8dp"
       android:layout_marginBottom="148dp"
       android:background="@drawable/button_blue"
       android:fontFamily="sans-serif-condensed-medium"
       android:text="Cadastrar"
       android:textAllCaps="false"
       android:textSize="19dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/edtPasswordNewUser" />


</androidx.constraintlayout.widget.ConstraintLayout>